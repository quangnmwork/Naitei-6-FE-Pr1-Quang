.container-fluid 
    .container
        .row.gx-5 
            .col-lg-12 
                +title({text:"Địa chỉ"})
            .col-lg-6
                +formEdit({fields,radioBtn,title:'Địa chỉ của bạn'})
                    .form-btn-group.form-btn-group--left
                        +button({text:'Chỉnh sửa thông tin',class:'form-btn'})
                        +button({text:'Xoá',class:'form-btn'})
            .col-lg-6
                +formEdit({fields,radioBtn,isAdd:true,title:'Thêm địa chỉ'})
                    .form-btn-group.form-btn-group--left
                        +button({text:'Cập nhật',class:'form-btn'})
                        +button({text:'Thoát',class:'form-btn'})
        .row.gx-5 
            .col-lg-6 
                +formEdit({fields,disable:true})
                    .form-btn-group
                        a.form-btn-edit Chỉnh sửa địa chỉ
        .row.gx-5 
            .col-lg-6 
                +formEdit({fields,disable:true})
                    .form-btn-group
                        a.form-btn-edit Chỉnh sửa địa chỉ