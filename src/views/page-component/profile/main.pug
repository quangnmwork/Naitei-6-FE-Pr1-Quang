include ../../abstract/mixins  
include ../../abstract/form

- var fields = [{id:'name',label:'Tên',type:'text',value:'Quân'},{id:'sc-name',label:'Họ&Tên đệm',type:'text',value:'Nguyễn Minh'},{id:'ct',label:'Công ty',type:'text',value:'abcxyz'},{id:'dc',label:'Địa chỉ',type:'text',value:'123 abc Str'},{id:'tp',label:'Thành phố',type:'text',value:'Florida'},{id:'dc',label:'Quốc tịch',type:'text',value:'Việt Nam'},{id:'dc',label:'ZipCode',type:'text',value:'0123321'}];
